generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Vendor {
  id           String    @id @default(cuid())
  name         String
  email        String    @unique
  phoneNumber  String?
  googleMap    String
  address      String?
  city         String?
  state        String?
  postalCode   String?
  createdAt    DateTime  @default(now())
  vehicles     Vehicle[] 
}

model City {
  id    String @id @default(cuid())
  name  String
}

model Vehicle {
  id           String         @id @default(cuid())
  vendorId     String
  name         String
  brand        String
  type         String
  numberPlate  String
  pricePerDay  Int
  thumbnail    String
  vendor       Vendor         @relation(fields: [vendorId], references: [id])
  createdAt    DateTime  @default(now())
  images       VehicleImage[] 
}

model VehicleImage {
  id        String   @id @default(cuid())
  url       String
  vehicleId String
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
}
